<%layout('layouts /boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-lable" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-lable" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-lable" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-lable" for="price">
                        Campground Price</label>
                    <div class="input-group">
                        <span class=" input-group-text" id="price-lable">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="Username" id="price"
                            aria-describedby="price-lable" name="campground[price]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" rows="3" name="campground[description]"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-group">
                        <input type="file" class="form-control custom-file-label" id="image" name="image" multiple>
                        <label class="input-group-text form-file-label form-file-text custom-file-label"
                            for="image">Upload</label>
                    </div>
                </div>
                <div class="mb-3"><button class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
        <div><a href="/campgrounds">Back to all campgrounds</a></div>
    </div>